{
  "compilerOptions": {
    "types": ["bun-types"],

     // enable latest features
    "lib": ["ESNext"],
    "module": "esnext",
    "target": "esnext",

    "moduleResolution": "bundler",
    "noEmit": true,
    "allowImportingTsExtensions": true,
    "moduleDetection": "force",

    "strict": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "composite": true,
    "downlevelIteration": true,
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    // "paths": {
    //   "commands/*": ["commands/*"] 
    // }
  }
}
